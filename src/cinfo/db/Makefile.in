subdirs = stdc stdclib unix

all:
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done

install:
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done

clean: 
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done

distclean: clean 
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done
	-rm -f Makefile

realclean: distclean
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done

mostlyclean: clean
	@for f in $(subdirs); do \
		(cd $$f && $(MAKE) $@) \
	done
