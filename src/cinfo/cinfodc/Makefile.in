srcdir = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
mandir = @mandir@/man1

INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
INSTALL = @INSTALL@

CC = @CC@
CFLAGS = -I../../.. -I$(srcdir)/../../../lib -I$(srcdir)/../lib @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = ../lib/libcinfo.a ../../../lib/libcutils.a @LIBS@

PROG = cinfodc
OBJS = cinfodc.o

.c.o:
	$(CC) -c -I. -I$(srcdir) $(CFLAGS) $<

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) $(LDFLAGS) -o $(PROG) $(OBJS) $(LIBS)

install: $(PROG)
	$(srcdir)/../../../mkinsdir.sh $(bindir) $(mandir)
	$(INSTALL_PROGRAM) $(PROG) $(bindir)
	$(INSTALL_DATA) $(srcdir)/$(PROG).1 $(mandir)

clean: 
	-rm -f $(PROG) *.o

distclean: clean 
	-rm -f Makefile

realclean: distclean

mostlyclean: clean
